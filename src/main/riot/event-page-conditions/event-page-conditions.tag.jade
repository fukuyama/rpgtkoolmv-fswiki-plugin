event-page-conditions
  div
    div 出現条件
    div(if='{ opts.conditions.switch1Valid }')
      event-page-switch(
        switch-id='{ opts.conditions.switch1Id }'
        switch-valid='{ opts.conditions.switch1Valid }'
      )
    div(if='{ opts.conditions.switch2Valid }')
      event-page-switch(
        switch-id='{ opts.conditions.switch2Id }'
        switch-valid='{ opts.conditions.switch2Valid }'
      )
    div(if='{ opts.conditions.selfSwitchValid }')
      event-page-self-switch(
        self-switch-ch='{ opts.conditions.selfSwitchCh }'
        self-switch-valid='{ opts.conditions.selfSwitchValid }'
      )
    div(if='{ opts.conditions.itemValid }')
      event-page-item(
        item-id='{ opts.conditions.itemId }'
      )
    div(if='{ opts.conditions.actorValid }')
      event-page-actor(
        actor-id='{ opts.conditions.actorId }'
      )

  style(scoped,type='less')
    include event-page-conditions.less

  script(type='coffee')
    include event-page-conditions.coffee
